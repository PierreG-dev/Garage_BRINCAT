{% extends 'base.html.twig' %}

{% block title %}SARL Garage BRINCAT{% endblock %}

{% block body %}

<style>
    body {
        background-color: transparent;
        background-size: cover;
    }

    ul {
        list-style: none;
    }

    .params-list li::before {
        content: "\2022";
        color: royalblue;
        font-weight: bold;
        display: inline-block;
        width: 1em;
        margin-left: -1em;
    }
</style>


<div class="container-fluid p-5 bg-light" style="min-height: 70vh;">
    <div class="row">
        <div class="col-2"></div>
        <h1 class="text-dark text-center">Nos offres neuf</h1>
    </div>
    <div class="row mb-5">
        <div class="col-2"></div>
        <hr class="bg-success" style="border-width: 3px; width: 50px">
    </div>
    <div class="row">
        {% for car in cars %}
        <div class="col-md-6 col-lg-3 col-sm-12">
            <div class="mb-5 text-center d-flex justify-content-center">
                <a href="{{ path('detail', {"type": 'neuf', "id": car.id}) }}">
                    <div class="car-card">
                        <div class="top">
                            <img src="/images/properties/{{ car.filename }}" alt="{{car.filename}}">
                        </div>
                        <div class="bottom">
                            <h5 class="card-title">{{ car.brand }} {{ car.model }}</h5>
        
                            <ul class="params-list" style="text-align: left; margin-left: 22%;margin-top: 15px;">
                                <li class="card-text">{{ car.Color }}</li>
                                <li class="card-text">{{ car.energyType }}</li>
                                <li class="card-text">{{ car.mileage }} Km</li>
                            </ul>
        
                            <h4 class="card-title" style="font-weight: bold; margin-top: -20px;">{{ car.price }} â‚¬ HT
                            </h4>
        
                            <div class="card-button">
                                <i class="fa fa-question-circle-o" aria-hidden="true"></i>
                                <p>En savoir plus</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        
        </div>
        {% else %}
        RIEN A AFFICHER
        {% endfor %}
    </div>
</div>


{% endblock %}