{% extends 'base_admin.html.twig' %}

{% block title %}Véhicule n°{{ car.id }}{% endblock %}

{% block body %}
    <h1>Véhicule n°{{ car.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{% if car.type == "Neuf" %}
                        <span class="sticker bg-success text-white">{{ car.type }}</span>
                    {% else %}
                        <span class="sticker bg-primary text-white">{{ car.type }}</span>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ car.Color }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ car.brand }}</td>
            </tr>
            <tr>
                <th>Modèle</th>
                <td>{{ car.model }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ car.price }}</td>
            </tr>
            <tr>
                <th>Année de mise en circulation</th>
                <td>{{ car.released ? car.released|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Energie</th>
                <td>{{ car.energyType }}</td>
            </tr>
            <tr>
                <th>Kilomètrage</th>
                <td>{{ car.mileage }}</td>
            </tr>
            <tr>
                <th>Equipements</th>
                <td>{{ car.equipments }}</td>
            </tr>
            <tr>
                <th>Garantie</th>
                <td>{{ car.warranty }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="/images/properties/{{ car.filename }}" alt="" style="max-width: 600px;height:auto;"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('car_index') }}">Retourner à la liste</a>

    <a href="{{ path('car_edit', {'id': car.id}) }}">Modifier</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
