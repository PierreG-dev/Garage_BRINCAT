{% extends 'base.html.twig' %}

{% block title %}Car index{% endblock %}

{% block body %}
    <h1>Car index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Color</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Price</th>
                <th>Released</th>
                <th>EnergyType</th>
                <th>Mileage</th>
                <th>Equipments</th>
                <th>Warranty</th>
                <th>Thumbnail</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.id }}</td>
                <td>{{ car.Color }}</td>
                <td>{{ car.brand }}</td>
                <td>{{ car.model }}</td>
                <td>{{ car.price }}</td>
                <td>{{ car.released ? car.released|date('Y-m-d') : '' }}</td>
                <td>{{ car.energyType }}</td>
                <td>{{ car.mileage }}</td>
                <td>{{ car.equipments }}</td>
                <td>{{ car.warranty }}</td>
                <td>{{ car.thumbnail }}</td>
                <td>{{ car.type }}</td>
                <td>
                    <a href="{{ path('car_show', {'id': car.id}) }}">show</a>
                    <a href="{{ path('car_edit', {'id': car.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('car_new') }}">Create new</a>
{% endblock %}
