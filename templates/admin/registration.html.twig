{% extends "base_admin.html.twig" %}

{% block body %}
    <h1>Créer un nouvel administrateur</h1>
    {{ form_start(form) }}
    {{ form_row(form.username, {'label': 'Nom', 'attr': {'placeholder': 'Nom'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr': {'placeholder': 'Confirmez le mot de passe'}}) }}
    <button type="submit" class="btn btn-success">Créer</button>
    {{ form_end(form) }}
{% endblock %}