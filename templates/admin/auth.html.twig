{% extends 'base_admin.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block head %}
    <link rel="canonical" href="https://www.sarlgaragebrincat.fr/admin/auth">
{% endblock %}

{% block body %}

<div class="text-center container m-auto">

    <h1 class="mb-5">Authentification</h1>

    <form action="{{ path('authentification') }}" method="post">
        <div class="form-group">
            <input type="text" class="form-control mb-5" placeholder="Nom" required name="_username">
            <input type="password" class="form-control mb-5" placeholder="Mot de passe" required name="_password">
        </div>
        <div class="form-group"><button type="submit" class="btn btn-success">Connexion</button></div>
    </form>

</div>
{% endblock %}